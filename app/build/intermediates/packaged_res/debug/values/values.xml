<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="almost_wh">#F6F6FF</color>
    <color name="black">#FF000000</color>
    <color name="dark_blu">#5171FF</color>
    <color name="dark_gr">#8B8B8B</color>
    <color name="drk_prm_green">#067C5A</color>
    <color name="drk_scd_navyblue">#1D1D35</color>
    <color name="lgt_neut_gray">#D9D9D9</color>
    <color name="lgt_prm_green">#00A872</color>
    <color name="light_blu">#D4F5FF</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Saklo</string>
    <style name="Base.Theme.Saklo" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark_blu</item>
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.AnimatedSplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/dark_blu</item>
        <item name="colorPrimaryVariant">@color/light_blu</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/dark_blu</item>
        <item name="colorSecondaryVariant">@color/light_blu</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimary</item>
        
    </style>
    <style name="Theme.Saklo" parent="Base.Theme.Saklo">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="login_Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_blu</item>
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="primaryBtn" parent="Theme.Saklo">
        <item name="backgroundTint">@color/dark_blu</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="secondaryBtn" parent="primaryBtn">
        <item name="backgroundTint">#666666</item>
    </style>
    <style name="tertiaryBtn" parent="primaryBtn">
        <item name="backgroundTint">@color/drk_prm_green</item>
    </style>
</resources>