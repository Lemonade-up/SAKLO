<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Saklo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="Theme.Saklo" parent="Base.Theme.Saklo">
        <item name="android:textSize">18sp</item>
        <item name="colorPrimary">@color/dark_blu</item>
        <item name="colorPrimaryVariant">@color/light_blu</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_gr</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/almost_wh</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
    </style>


    <style name="primaryBtn" parent="Theme.Saklo">
        <item name="backgroundTint">@color/dark_blu</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">17dp</item>
    </style>

    <style name="secondaryBtn" parent="primaryBtn">
        <item name="backgroundTint">#57A7BF</item>
        <item name="android:textColor">#4D4D4D</item>
    </style>

    <style name="tertiaryBtn" parent="primaryBtn">
        <item name="backgroundTint">@color/dark_blu</item>
    </style>
    <style name="AccOptBtns" parent="primaryBtn">
        <item name="cornerRadius">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark_blu</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_blu</item>
    </style>

    <style name="login_Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_blu</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="GeneralTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowBackground">@color/almost_wh</item>
        <item name="colorPrimary">@color/dark_blu</item>
        <item name="colorPrimaryVariant">@color/light_blu</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_gr</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/almost_wh</item>
    </style>

</resources>