<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimatedSplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blu</item>
        <item name="colorPrimaryVariant">@color/light_blu</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blu</item>
        <item name="colorSecondaryVariant">@color/light_blu</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.Theme.Saklo" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.Saklo" parent="Base.Theme.Saklo">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="primaryBtn" parent="Theme.Saklo">
        <item name="backgroundTint">@color/dark_blu</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="secondaryBtn" parent="primaryBtn">
        <item name="backgroundTint">#666666</item>
    </style>

    <style name="tertiaryBtn" parent="primaryBtn">
        <item name="backgroundTint">@color/drk_prm_green</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark_blu</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="login_Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_blu</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

</resources>