<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/almost_wh"
        android:gravity="center"
        tools:context=".activities.AppointmentActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:textColor="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/baseline_person_24" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/saklogo_cropped" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/hr_searchbar"
            android:background="@drawable/rectangle"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="SEARCH"
            android:textColorHint="@color/dark_gr"
            android:drawableLeft="@drawable/baseline_search_24"
            android:textColor="@color/dark_gr"
            android:drawablePadding="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPOINTMENT"
            android:textColor="@color/dark_blu"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
            
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewHF"
            android:scrollbars="vertical"
            android:layout_marginBottom="55dp"/>


    </LinearLayout>

    <include layout="@layout/activity_nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>